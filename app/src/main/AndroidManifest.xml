<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.megan.exquisitecorpse.capstone">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher2"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name="com.activeandroid.app.Application">

        <activity android:name=".OpeningScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".SheetOfPaper"
            android:noHistory="true"/>

        <activity android:name=".DrawingInterface"
            android:noHistory="true"/>

        <activity android:name=".SettingsActivity"
            android:noHistory="true"
            android:parentActivityName=".OpeningScreen">
        </activity>

        <activity android:name=".Gallery"
            android:noHistory="true">

                <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>

        <activity android:name=".DummySearchable"
            android:noHistory="true">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

        </activity>

        <meta-data android:name="AA_DB_NAME" android:value="pictures.db" />
        <meta-data android:name="AA_DB_VERSION" android:value="5" />

    </application>

</manifest>
